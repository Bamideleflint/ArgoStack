{
  "dashboard": {
    "id": null,
    "title": "Sample-App Metrics Dashboard",
    "tags": ["application", "sample-app", "canary"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "25s",
    "panels": [
      {
        "id": 1,
        "type": "graph",
        "title": "Application Requests",
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 12,
          "h": 9
        },
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{app=\"sample-app\"}[5m])) by (namespace, method, status)",
            "legendFormat": "{{namespace}} - {{method}} [{{status}}]",
            "refId": "A"
          }
        ],
        "xaxis": {
          "show": true
        },
        "yaxes": [
          {
            "format": "reqps",
            "show": true
          },
          {
            "format": "short",
            "show": true
          }
        ]
      },
      {
        "id": 2,
        "type": "graph",
        "title": "Error Rate",
        "gridPos": {
          "x": 12,
          "y": 0,
          "w": 12,
          "h": 9
        },
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{app=\"sample-app\",status=~\"5..\"}[5m])) by (namespace) / sum(rate(http_requests_total{app=\"sample-app\"}[5m])) by (namespace)",
            "legendFormat": "{{namespace}} error rate",
            "refId": "A"
          }
        ],
        "xaxis": {
          "show": true
        },
        "yaxes": [
          {
            "format": "reqps",
            "show": true
          },
          {
            "format": "short",
            "show": true
          }
        ]
      },
      {
        "id": 3,
        "type": "singlestat",
        "title": "Memory Usage",
        "gridPos": {
          "x": 0,
          "y": 9,
          "w": 8,
          "h": 3
        },
        "targets": [
          {
            "expr": "sum(container_memory_usage_bytes{pod=~\"sample-app.*\",container=\"sample-app\"}) by (namespace)",
            "refId": "A"
          }
        ],
        "format": "bytes",
        "prefix": "Memory: ",
        "postfix": "B",
        "valueName": "current"
      },
      {
        "id": 4,
        "type": "singlestat",
        "title": "CPU Usage",
        "gridPos": {
          "x": 8,
          "y": 9,
          "w": 8,
          "h": 3
        },
        "targets": [
          {
            "expr": "sum(rate(container_cpu_usage_seconds_total{pod=~\"sample-app.*\",container=\"sample-app\"}[5m])) by (namespace)",
            "refId": "A"
          }
        ],
        "format": "percentunit",
        "prefix": "CPU: ",
        "valueName": "current"
      },
      {
        "id": 5,
        "type": "singlestat",
        "title": "Uptime",
        "gridPos": {
          "x": 16,
          "y": 9,
          "w": 8,
          "h": 3
        },
        "targets": [
          {
            "expr": "time() - process_start_time_seconds",
            "refId": "A"
          }
        ],
        "format": "s",
        "prefix": "Uptime: ",
        "postfix": "s",
        "valueName": "current"
      }
    ]
  }
}